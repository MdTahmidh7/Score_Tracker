<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#07010E"
    tools:context=".Card">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Match Score Bord"
            android:textSize="40sp"
            android:textColor="#7EE4E4"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team1"
            android:textSize="30sp"
            android:textColor="#7EE4E4"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            />
        <Button
            android:id="@+id/button_Confirm"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/otherbuttonbg"
            android:text="Confirm"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team2"
            android:textSize="30sp"
            android:textColor="#7EE4E4"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="2dp">
        <ScrollView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp">
    <TextView
        android:id="@+id/textView_Score1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="score"
        android:textSize="30sp"
        android:textColor="#7EE4E4"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="40dp"
        />
        </ScrollView>

        <ScrollView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp">
    <TextView
        android:id="@+id/textview_Score2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="score"
        android:textSize="30sp"
        android:textColor="#7EE4E4"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="80dp"
        />
        </ScrollView>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="2dp">
        <EditText
            android:id="@+id/editText_Score1"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:textColor="#7EE4E4"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="50dp"
            android:inputType="numberDecimal"
            />
        <EditText
            android:id="@+id/editText_Score2"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:textColor="#7EE4E4"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="150dp"
            android:inputType="numberDecimal"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="2dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/button_winTeam1"
            android:layout_marginLeft="20dp"
            android:text="Win"
            android:textColor="#151514"
            android:background="@drawable/otherbuttonbg"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/button_winTeam2"
            android:layout_marginLeft="160dp"
            android:text="win"
            android:textColor="#151514"
            android:background="@drawable/otherbuttonbg"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="2dp"
        android:gravity="center">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/button_winBothTeam"
            android:text="Both"
            android:textColor="#151514"
            android:background="@drawable/otherbuttonbg"
            />
    </LinearLayout>
   <TextView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/textView_TimelineCard"
       android:textSize="30sp"
       android:textColor="@android:color/holo_blue_light"
       android:text="Timeline : "
       android:layout_marginTop="15dp"
       />

</LinearLayout>