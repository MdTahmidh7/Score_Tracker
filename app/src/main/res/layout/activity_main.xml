<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#07010E"
    tools:context=".MainActivity"
    android:orientation="vertical">

<include
    layout="@layout/toolbar"
    android:id="@+id/toolbarId"
    />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cricket Match Score Bord"
            android:textSize="30sp"
            android:textColor="#C1E3E3"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView_Total_run"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:padding="10dp"
            android:text="Total Run"
            android:textColor="#23D2F6"
            />

        <EditText
            android:id="@+id/editText_totalRun"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:textColor="#23D2F6"
            android:layout_marginLeft="20dp"
            android:inputType="numberDecimal"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/button_UpdateTotalRun"
            android:layout_marginLeft="30dp"
            android:text="Update"
            android:textColor="#151514"
            android:background="@drawable/otherbuttonbg"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView_Wicket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wicket"
            android:textSize="24sp"
            android:padding="10dp"
            android:textColor="#EA2B2B"
            />
        <EditText
            android:id="@+id/editText_Wicket"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:autofillHints=""
            tools:ignore="LabelFor,TextFields"
            android:textColor="#EA2B2B"
            android:layout_marginLeft="50dp"
            android:inputType="numberDecimal"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/button_UpdateWicket"
            android:layout_marginLeft="30dp"
            android:text="Update"
            android:textColor="#171715"
            android:background="@drawable/otherbuttonbg"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView_Over"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Over"
            android:textSize="24sp"
            android:padding="10dp"
            android:textColor="#71EA2A"
            />
        <EditText
            android:id="@+id/editText_Over"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:autofillHints=""
            tools:ignore="LabelFor,TextFields"
            android:textColor="#71EA2A"
            android:layout_marginLeft="75dp"
            android:inputType="numberDecimal"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/button_UpdateOver"
            android:layout_marginLeft="27dp"
            android:text="Update"
            android:textColor="#121211"
            android:background="@drawable/otherbuttonbg"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageButton
            android:id="@+id/button_One"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:src="@drawable/one"
            android:layout_marginTop="10dp"
            android:background="@drawable/imagebuttonbg"
            />

        <ImageButton
            android:id="@+id/button_Two"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:src="@drawable/two"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="9dp"
            android:background="@drawable/imagebuttonbg"
            />
        <ImageButton
            android:id="@+id/button_Three"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:src="@drawable/three"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="9dp"
            android:background="@drawable/imagebuttonbg"
            />
        <ImageButton
            android:id="@+id/button_Four"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:src="@drawable/four"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/imagebuttonbg"
            />
        <ImageButton
            android:id="@+id/button_Six"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:src="@drawable/six"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="7dp"
            android:background="@drawable/imagebuttonbg"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >

        <Button
            android:id="@+id/button_NoBall"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:text="No Ball"
            android:textSize="18sp"
            android:textColor="#3BB838"
            android:background="@drawable/buttonbackground"
            />

        <Button
            android:id="@+id/button_Wide"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:text="Wide"
            android:textSize="20sp"
            android:textColor="#3BB838"
            android:background="@drawable/buttonbackground"
            />
        <Button
            android:id="@+id/button_Out"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:text="OUT"
            android:textSize="20sp"
            android:textColor="#3BB838"
            android:background="@drawable/buttonbackground"
            />
        <Button
            android:id="@+id/button_Dot"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:text="Dot"
            android:textSize="20sp"
            android:textColor="#3BB838"
            android:background="@drawable/buttonbackground"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:id="@+id/textView_TimeLine"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:text="TimeLine : "
            android:textSize="25sp"
            android:layout_marginLeft="10dp"
            android:textColor="#EDC823"
            android:textStyle="bold"
            />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="126dp"
            android:text="Extra"
            android:onClick="showPopup"
            android:textColor="#FAE454"
            android:textStyle="bold"
            android:background="@drawable/otherbuttonbg"
            android:layout_marginTop="5dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/textView_TimeLineContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#13BA42"

                android:textSize="17sp"
                />

        </ScrollView>

    </LinearLayout>

</LinearLayout>