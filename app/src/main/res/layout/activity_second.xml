<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity"
    android:orientation="vertical"
    android:background="#07010E"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView_AboutDeveloper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Developer"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textColor="#1FCACC"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewDeveloper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/tahmidaboutpic"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/textViewDeveloperName"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="@string/about_String"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="32sp"
        android:textColor="#22C1C3"
        />
    <TextView
        android:id="@+id/textViewDeveloperDept"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="@string/about_String_Dept"
        android:layout_gravity="center"
        android:textSize="22sp"
        android:textColor="#21C1C3"
        />
    <TextView

        android:id="@+id/textViewDeveloperIns"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="@string/about_String_Ins"
        android:layout_gravity="center"
        android:textSize="22sp"
        android:textColor="#23C1C3"
        />
</LinearLayout>